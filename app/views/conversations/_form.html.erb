<link rel="stylesheet" href="./stylesheets/message_form">

<%= form_with(model: @conversation, local: true) do |form| %>
  <% if @conversation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conversation.errors.count, "error") %> prohibited this @conversation from being saved:</h2>

      <ul>
      <% @conversation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% if user_signed_in? %>
      <%= form.hidden_field :buyer_id, value: current_user.id %>
    <% end %>
  </div>

  <div class="field">
    <%= form.hidden_field :seller_id, value: @item.user.id %>
  </div>

  <div class="field">
    <%= form.text_area :message, placeholder: "Hi! Can i pick this up tomorrow?"  %>
  </div>

  <div class="send_message">
    <%= form.submit "Send" %>
  </div>

  
<% end %>
