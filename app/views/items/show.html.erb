<%= render :partial => "layouts/shared/search_form" %>
<div class="sub-body">
  <div class="item-highlight">
    <div class="image-container">
      <% if @item.image.attached? %>
        <%= image_tag(@item.image.attachment, :alt => "attached-image") %>
      <% else %>
        <%= image_tag("large-no-image.png",:alt=> "no-attachment") %>
      <% end %>
    </div>
    <div class="item-information-container">
      <div class="watchlist">
        <%= image_tag("watchlist.png" ,:alt=> "watchlist-icon") %>
      </div>
      <div class="information-box">
        <p class="item-name"> <%= @item.name %></p>
        <div class="item-location">
          <%= image_tag("logo2v2outlinewhite.png" ,:alt=> "location-pin") %>
          <p><%= @item.user.user_location %></p>
        </div>
        <p class="item-description">
          <%= @item.description %>
        </p>
      </div>
    </div>
  </div>
  
  <link rel="stylesheet" href="./stylesheets/form">
  <div class="form" style="margin: 0;">>
    <%= link_to 'Edit', edit_item_path(@item) %> |
    <%= link_to 'Back', '/' %>
  </div>
</div>